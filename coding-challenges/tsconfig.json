{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "types": ["vitest/globals"],
    "baseUrl": "problems"
  },
  "include": ["cracking-the-coding-interview/problems/**/*.ts"],
  "exclude": ["node_modules"]
}
